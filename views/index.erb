<!DOCTYPE html>
<html ng-app="fyberApp">
    <head>
      <title>FyberChallenge</title>
      <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.0/ui-bootstrap.min.js"></script>
      <script src="javascripts/fyber_app.js"></script>
    </head>
    <body ng-controller="offersCtrl">
    <div class="container">
      <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
          <h2>Get Fyber Offers!</h2>
          <form class="simple-form" name="form"><br>
            <div class="form-group">
              <label for="title">UID</label>
              <input class="form-control" type="text" required ng-model="offersQuery.uid" /><br/>

              <label for="duration">PUB0</label>
              <input class="form-control" type="text" ng-model="offersQuery.pub0"/> <br/>

              <label for="duration">Page</label>
              <input class="form-control" type="number" min="1" max="200" ng-model="offersQuery.page"/><br/>
            </div>
            <input class="btn btn-default" type="submit" ng-disabled="!form.$valid || inProgress" value="{{ submitButton.title }}" ng-click="getOffers()"/>
          </form>
      </div>
      </hr>
      <div class="col-md-3"></div>
      </div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" ng-show="offers.length == 0">
          <h3>Results</h3>
          <p>No offers are currently available for this user.<p>
        </div>
        <div class="col-md-6" ng-show="offers.length > 0">
          <h3>Results</h3>
          <ul>
              <div ng-repeat="offer in offers">
                <li>
                  <img ng-src="{{ offer.thumbnail.lowres }}" alt="Smiley face" height="42" width="42">
                  Title: {{ offer.title }}, Payout: {{ offer.payout }}
                </li>
              </div>
          </ul>
        </div>



        <div class="col-md-3"></div>
      </div>
    </div>
    </body>
</html>
